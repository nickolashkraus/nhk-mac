#!/usr/bin/env bash
#
# DESCRIPTION
#   Main entrypoint for nhk-mac.
#   Handles command-line options and executes functions defined in `src/func`.
#
# USAGE
#
#   source src/run

source src/color
source src/func

HOSTNAME=""
PYTHON_VERSION=""
GITHUB_ACCESS_TOKEN=""

while [[ $# -gt 0 ]]; do
  case $1 in
    -h | --help)
      usage
      exit 0
      ;;
    --hostname)
      HOSTNAME="$2"
      shift 2
      ;;
    --python-version)
      PYTHON_VERSION="$2"
      shift 2
      ;;
    --github-access-token)
      GITHUB_ACCESS_TOKEN="$2"
      shift 2
      ;;
    *)
      echo_c "Unknown option: $1" "${RED}"
      usage
      exit 1
      ;;
  esac
done

export HOSTNAME
export PYTHON_VERSION
export GITHUB_ACCESS_TOKEN

if [[ -z "${HOSTNAME}" ]]; then
  echo_c "Enter a hostname for this machine:" "${WHITE}"
  read -r HOSTNAME
  export HOSTNAME
fi

if [[ -z "${PYTHON_VERSION}" ]]; then
  echo_c "Enter a Python version to install (e.g., 3.13.0):" "${WHITE}"
  read -r PYTHON_VERSION
  export PYTHON_VERSION
fi

if [[ -z "${GITHUB_ACCESS_TOKEN}" ]]; then
  echo_c "Enter your GitHub access token:" "${WHITE}"
  read -rs GITHUB_ACCESS_TOKEN
  echo
  export GITHUB_ACCESS_TOKEN
fi

welcome
check_sip
set_hostname
configure_keyboard
configure_dock
install_xcode
install_homebrew
install_homebrew_packages
install_iterm2
install_oh_my_zsh
install_vim_plugin_manager
install_powerline_fonts
generate_ssh_keys
set_up_workspace
install_java
install_python
set_up_virtualenv
install_bash_scripts
install_dotfiles
install_vim_plugins
install_fzf
install_ycm
install_yabai
install_skhd

echo_c "#############################" "${GREEN}"
echo_c "Setup completed successfully!" "${GREEN}"
echo_c "#############################" "${GREEN}"
